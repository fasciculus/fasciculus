<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:p="clr-namespace:Fasciculus.Eve.Assets.PageModels"
             xmlns:c="clr-namespace:Fasciculus.Eve.Assets.Pages"
             x:Class="Fasciculus.Eve.Assets.Pages.MainPage"
             x:DataType="p:MainPageModel"
             Title="" Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <c:DownloadSdeStatusConverter x:Key="dwn" />
        <c:PendingToDoneConverter x:Key="ptd" />
        <c:LongProgressInfoConverter x:Key="lpi" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="16,16"
            Spacing="32">

            <Button
                x:Name="StartBtn"
                Text="Start" 
                Command="{Binding StartCommand}" />

            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="100,*,100,*,100,*" ColumnSpacing="16" RowSpacing="8">
                <Label Text="SDE Download &amp; Extract" FontAttributes="Bold"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" />
                <Label Text="File"
                       Grid.Row="1" Grid.Column="0" />
                <Label Text="{Binding DownloadSde, Converter={StaticResource dwn}}"
                       TextColor="{Binding DownloadSde, Converter={StaticResource dwn}}"
                       Grid.Row="1" Grid.Column="1" />
                <Label Text="Extract"
                       Grid.Row="1" Grid.Column="2" />
                <ProgressBar Progress="{Binding ExtractSde, Converter={StaticResource lpi}}"
                             ProgressColor="{Binding ExtractSde, Converter={StaticResource lpi}}"
                             BackgroundColor="LightGray" MinimumHeightRequest="8"
                             Grid.Row="1" Grid.Column="3" />
            </Grid>

            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="100,*,100,*,100,*" ColumnSpacing="16" RowSpacing="8">
                <Label Text="SDE Parsing" FontAttributes="Bold"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" />
                <Label Text="Names"
                       Grid.Row="1" Grid.Column="0" />
                <Label Text="{Binding ParseNames, Converter={StaticResource ptd}}"
                       TextColor="{Binding ParseNames, Converter={StaticResource ptd}}"
                       Grid.Row="1" Grid.Column="1" />
                <Label Text="Types"
                       Grid.Row="1" Grid.Column="2" />
                <Label Text="{Binding ParseTypes, Converter={StaticResource ptd}}"
                       TextColor="{Binding ParseTypes, Converter={StaticResource ptd}}"
                       Grid.Row="1" Grid.Column="3" />
                <Label Text="Regions"
                       Grid.Row="2" Grid.Column="0" />
                <ProgressBar Progress="{Binding ParseRegions, Converter={StaticResource lpi}}"
                             ProgressColor="{Binding ParseRegions, Converter={StaticResource lpi}}"
                             BackgroundColor="LightGray" MinimumHeightRequest="8"
                             Grid.Row="2" Grid.Column="1"/>
                <Label Text="Constellations" Grid.Row="2" Grid.Column="2" />
                <ProgressBar Progress="{Binding ParseConstellations, Converter={StaticResource lpi}}"
                             ProgressColor="{Binding ParseConstellations, Converter={StaticResource lpi}}"
                             BackgroundColor="LightGray" MinimumHeightRequest="8"
                             Grid.Row="2" Grid.Column="3"/>
                <Label Text="Solar Systems"
                       Grid.Row="2" Grid.Column="4" />
                <ProgressBar Progress="{Binding ParseSolarSystems, Converter={StaticResource lpi}}"
                             ProgressColor="{Binding ParseSolarSystems, Converter={StaticResource lpi}}"
                             BackgroundColor="LightGray" MinimumHeightRequest="8"
                             Grid.Row="2" Grid.Column="5"/>
            </Grid>

            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="100,*,100,*,100,*" ColumnSpacing="16" RowSpacing="8">
                <Label Text="SDE Conversion" FontAttributes="Bold"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" />
                <Label Text="Data"
                       Grid.Row="1" Grid.Column="0" />
                <Label Text="{Binding ConvertData, Converter={StaticResource ptd}}"
                       TextColor="{Binding ConvertData, Converter={StaticResource ptd}}"
                       Grid.Row="1" Grid.Column="1" />
                <Label Text="Universe"
                       Grid.Row="1" Grid.Column="2" />
                <Label Text="{Binding ConvertUniverse, Converter={StaticResource ptd}}"
                       TextColor="{Binding ConvertUniverse, Converter={StaticResource ptd}}"
                       Grid.Row="1" Grid.Column="3" />
            </Grid>

            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="100,*,100,*,100,*" ColumnSpacing="16" RowSpacing="8">
                <Label Text="Navigation" FontAttributes="Bold"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" />
                <Label Text="Connections"
                       Grid.Row="1" Grid.Column="0" />
                <Label Text="{Binding CreateConnections, Converter={StaticResource ptd}}"
                       TextColor="{Binding CreateConnections, Converter={StaticResource ptd}}"
                       Grid.Row="1" Grid.Column="1" />
            </Grid>

            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="100,*,100,*,100,*" ColumnSpacing="16" RowSpacing="8">
                <Label Text="Images" FontAttributes="Bold"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" />
                <Label Text="Copy"
                       Grid.Row="1" Grid.Column="0" />
                <ProgressBar Progress="{Binding CopyImages, Converter={StaticResource lpi}}"
                             ProgressColor="{Binding CopyImages, Converter={StaticResource lpi}}"
                             BackgroundColor="LightGray" MinimumHeightRequest="8"
                             Grid.Row="1" Grid.Column="1" />
                <Label Text="Create"
                       Grid.Row="1" Grid.Column="2" />
                <Label Text="{Binding CreateImages, Converter={StaticResource ptd}}"
                       TextColor="{Binding CreateImages, Converter={StaticResource ptd}}"
                       Grid.Row="1" Grid.Column="3" />
            </Grid>

            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*" ColumnSpacing="16" RowSpacing="8">
                <Label Text="Changed Resources" FontAttributes="Bold"
                       Grid.Row="0" Grid.Column="0"/>
                <ListView ItemsSource="{Binding ChangedResources}"
                          Grid.Row="1" Grid.Column="0">
                    <ListView.ItemTemplate>
                        <DataTemplate  x:DataType="x:String">
                            <ViewCell>
                                <Label Text="{Binding .}" TextColor="Orange" />
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>