<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fasciculus.Eve.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Fasciculus.Eve.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Fasciculus.Eve">

    <ShellContent
        Title="Loading"
        ContentTemplate="{DataTemplate pages:LoadingPage}"
        Route="Loading" />

    <ShellContent
        Title="Info"
        ContentTemplate="{DataTemplate pages:InfoPage}"
        Route="Info" />

    <ShellContent
        Title="Industry"
        ContentTemplate="{DataTemplate pages:IndustryPage}"
        Route="Industry" />

    <ShellContent
        Title="Market"
        ContentTemplate="{DataTemplate pages:TradesPage}"
        Route="Trades" />

    <ShellContent
        Title="Map"
        ContentTemplate="{DataTemplate pages:MapPage}"
        Route="Map" />

    <ShellContent
        Title="Planetary Industry"
        ContentTemplate="{DataTemplate pages:PlanetsPage}"
        Route="Planets" />

    <ShellContent
        Title="Skills"
        ContentTemplate="{DataTemplate pages:SkillsPage}"
        Route="Skills" />

</Shell>
