<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Fasciculus.Eve.PageModels"
             xmlns:c="clr-namespace:Fasciculus.Eve.Pages.Controls"
             x:Class="Fasciculus.Eve.Pages.MarketPage"
             x:DataType="m:MarketPageModel"
             Title="" Shell.NavBarIsVisible="False">

    <ScrollView>
        <HorizontalStackLayout>
            <c:SideBar BindingContext="{Binding SideBar}" />
            <VerticalStackLayout Padding="16,16" Spacing="16">
                <HorizontalStackLayout Spacing="16">
                    <Label Text="Hub:" />
                    <Label Text="{Binding Hub}" TextColor="LightGreen" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>