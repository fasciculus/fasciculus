<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Fasciculus.Eve.PageModels"
             xmlns:c="clr-namespace:Fasciculus.Eve.Pages.Controls"
             x:Class="Fasciculus.Eve.Pages.IndustryPage"
             x:DataType="m:IndustryPageModel"
             Title="" Shell.NavBarIsVisible="False">

    <ScrollView>
        <HorizontalStackLayout>
            <c:SideBar BindingContext="{Binding SideBar}" />
            <VerticalStackLayout Padding="16,16" Spacing="16">
                <Grid RowDefinitions="Auto" ColumnDefinitions="100,*">
                    <Label Text="Industry" Grid.Row="0" Grid.Column="0" />
                </Grid>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>