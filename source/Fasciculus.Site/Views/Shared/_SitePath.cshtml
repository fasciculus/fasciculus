@model SitePath
@if (Model.Count > 0)
{
    bool first = true;
    <p>
        @foreach (SitePathEntry entry in Model)
        {
            bool isLeaf = NavigationKind.IsLeaf(entry.Kind);
            string link = entry.Link.ToString() + (isLeaf ? ".html" : "/");

            if (!first)
            {
                <span>&nbsp;/&nbsp;</span>
            }

            <a href="~/@link">@entry.Label</a>

            first = false;
        }
    </p>
}